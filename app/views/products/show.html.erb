<%= @product.name %>
<br>
<%= @product.price %>
<br>

<%= link_to "Delete", "/products/#{@product.id}", method: :delete %>
<br>
<%= link_to "Update", "/products/#{@product.id}/edit", method: :get %>

<div>

<h3> Message <%= @product.sale_message %> </h3>
<h3> Tax: <%= @product.tax %> </h3>
<h3> Total: <%= @product.total %> </h3>
<h3> Supplier: <%= @product.supplier.name %> </h3>

</div>
<% @images.each do |image| %>
<img src = "<%= image.image_url %>">
<% end %>

<%=form_tag '/orders', method: :post do%>
<div>
  <%= label_tag :quantity, "insert your quantity here" %>
  <%= text_area_tag :quantity %>
  <%= label_tag :product_id, "insert your product_id here" %>
  <%= text_area_tag :product_id %>
  <%= hidden_field_tag :user_id, current_user.id %>
</div>
<div>
  <%= submit_tag "Buy now!"%>
</div>
<% end %>
